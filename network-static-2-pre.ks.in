#test name: network-static-2-pre
#various combinations of activation in initramfs and stage 2
url @KSTEST_URL@
install

%include /tmp/ksinclude
%pre
# activated in initramfs with dhcp, reactivated in stage 2
echo "network --device=enp0s4 --bootproto static --ip @KSTEST_STATIC_IP1@ --netmask @KSTEST_STATIC_NETMASK@ --gateway @KSTEST_STATIC_GATEWAY@" >> /tmp/ksinclude
# activated in initramfs with dhcp, not reactivated in stage 2
echo "network --device=enp0s5 --bootproto static --ip @KSTEST_STATIC_IP2@ --netmask @KSTEST_STATIC_NETMASK@ --gateway @KSTEST_STATIC_GATEWAY@" >> /tmp/ksinclude
# not activated in initramfs with dhcp, reactivated in stage 2
echo "network --device=enp0s6 --bootproto static --ip @KSTEST_STATIC_IP3@ --netmask @KSTEST_STATIC_NETMASK@ --gateway @KSTEST_STATIC_GATEWAY@ --activate" >> /tmp/ksinclude
# not activated in initramfs with dhcp, not reactivated in stage 2
echo "network --device=enp0s7 --bootproto static --ip @KSTEST_STATIC_IP4@ --netmask @KSTEST_STATIC_NETMASK@ --gateway @KSTEST_STATIC_GATEWAY@" >> /tmp/ksinclude

%end

bootloader --timeout=1
zerombr
clearpart --all
autopart

keyboard us
lang en
timezone America/New_York
rootpw qweqwe
shutdown

%packages
%end

%post --nochroot

@KSINCLUDE@ post-nochroot-lib-network.sh

check_gui_configurations enp0s3 enp0s4 enp0s5 enp0s6 enp0s7

%end

%post

@KSINCLUDE@ post-lib-network.sh

check_device_connected enp0s3 yes

check_device_ifcfg_value enp0s4 IPADDR @KSTEST_STATIC_IP1@
check_device_connected enp0s4 yes
check_device_ipv4_address enp0s4 @KSTEST_STATIC_IP1@

check_device_ifcfg_value enp0s5 IPADDR @KSTEST_STATIC_IP2@
check_device_connected enp0s5 yes

check_device_ifcfg_value enp0s6 IPADDR @KSTEST_STATIC_IP3@
check_device_connected enp0s6 yes
check_device_ipv4_address enp0s6 @KSTEST_STATIC_IP3@

check_device_ifcfg_value enp0s7 IPADDR @KSTEST_STATIC_IP4@
if [[ "@KSTEST_OS_NAME@" == "rhel" ]]; then
    check_device_connected enp0s7 no
else
    # Fedora autoactivates default connections (Wired Connection 2)
    # if it doesn't find ifcfg for the device, which is the case for
    # kickstart in %pre (unlike normal kickstart where the ifcfg file
    # is created in initramfs).
    check_device_connected enp0s7 yes
fi

# No error was written to /root/RESULT file, everything is OK
if [[ ! -e /root/RESULT ]]; then
   echo SUCCESS > /root/RESULT
fi
%end
