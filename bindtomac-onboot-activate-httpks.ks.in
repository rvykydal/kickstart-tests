#test name: bindtomac-onboot-activate-httpks
url @KSTEST_URL@
install
network --device=enp0s4 --bootproto=dhcp --no-activate --onboot=yes --bindto=mac
network --device=enp0s3 --bootproto=dhcp --onboot=no --bindto=mac
network --device=enp0s5 --bootproto=dhcp --activate --onboot=no --bindto=mac

bootloader --timeout=1
zerombr
clearpart --all
autopart

keyboard us
lang en
timezone America/New_York
rootpw qweqwe
shutdown

%packages
%end

%post --nochroot

@KSINCLUDE@ post-nochroot-lib-network.sh

check_gui_configurations enp0s3 enp0s4 enp0s5

%end

%post

@KSINCLUDE@ post-lib-network.sh

check_device_ifcfg_value enp0s3 ONBOOT no
check_device_ifcfg_value enp0s4 ONBOOT yes
check_device_ifcfg_value enp0s5 ONBOOT no
check_device_connected enp0s4 no
check_device_connected enp0s5 yes
check_device_ifcfg_bound_to_mac enp0s3
check_device_ifcfg_bound_to_mac enp0s4
check_device_ifcfg_bound_to_mac enp0s5

# No error was written to /root/RESULT file, everything is OK
if [[ ! -e /root/RESULT ]]; then
   echo SUCCESS > /root/RESULT
fi
%end
