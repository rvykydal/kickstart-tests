#test name: network-device-bootif
url @KSTEST_URL@
install

network --device=bootif --bootproto=dhcp --ipv6=2001:cafe:cafe::1/64

bootloader --timeout=1
zerombr
clearpart --all
autopart

keyboard us
lang en
timezone America/New_York
rootpw qweqwe
shutdown

%packages
%end

%post

@KSINCLUDE@ post-lib-network.sh

check_device_connected @KSTEST_NETDEV1@ yes
check_device_connected @KSTEST_NETDEV2@ yes
check_device_ifcfg_value @KSTEST_NETDEV2@ IPV6ADDR 2001:cafe:cafe::1/64

# No error was written to /root/RESULT file, everything is OK
if [[ ! -e /root/RESULT ]]; then
   echo SUCCESS > /root/RESULT
fi
%end
