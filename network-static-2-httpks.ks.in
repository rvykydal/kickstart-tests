#test name: network-static-2
#various combinations of activation in initramfs and stage 2
url @KSTEST_URL@
install
# activated in initramfs with dhcp, reactivated in stage 2
network --device=enp0s4 --bootproto static --ip @KSTEST_STATIC_IP1@ --netmask @KSTEST_STATIC_NETMASK@ --gateway @KSTEST_STATIC_GATEWAY@
# activated in initramfs with dhcp, not reactivated in stage 2
network --device=enp0s5 --bootproto static --ip @KSTEST_STATIC_IP2@ --netmask @KSTEST_STATIC_NETMASK@ --gateway @KSTEST_STATIC_GATEWAY@
# not activated in initramfs with dhcp, reactivated in stage 2
network --device=enp0s6 --bootproto static --ip @KSTEST_STATIC_IP3@ --netmask @KSTEST_STATIC_NETMASK@ --gateway @KSTEST_STATIC_GATEWAY@ --activate
# not activated in initramfs with dhcp, not reactivated in stage 2
network --device=enp0s7 --bootproto static --ip @KSTEST_STATIC_IP4@ --netmask @KSTEST_STATIC_NETMASK@ --gateway @KSTEST_STATIC_GATEWAY@

bootloader --timeout=1
zerombr
clearpart --all
autopart

keyboard us
lang en
timezone America/New_York
rootpw qweqwe
shutdown

%packages
%end

%post --nochroot

@KSINCLUDE@ post-nochroot-lib-network.sh

check_gui_configurations enp0s3 enp0s4 enp0s5 enp0s6 enp0s7

%end

%post

@KSINCLUDE@ post-lib-network.sh

check_device_connected enp0s3 yes

check_device_ifcfg_value enp0s4 IPADDR @KSTEST_STATIC_IP1@
check_device_connected enp0s4 yes
check_device_ipv4_address enp0s4 @KSTEST_STATIC_IP1@

check_device_ifcfg_value enp0s5 IPADDR @KSTEST_STATIC_IP2@
check_device_connected enp0s5 yes

check_device_ifcfg_value enp0s6 IPADDR @KSTEST_STATIC_IP3@
check_device_connected enp0s6 yes
check_device_ipv4_address enp0s6 @KSTEST_STATIC_IP3@

check_device_ifcfg_value enp0s7 IPADDR @KSTEST_STATIC_IP4@
check_device_connected enp0s7 no

# No error was written to /root/RESULT file, everything is OK
if [[ ! -e /root/RESULT ]]; then
   echo SUCCESS > /root/RESULT
fi
%end
