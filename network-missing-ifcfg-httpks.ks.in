#test name: network-missing-ifcfg
#creating missing ifcfg files (devices not activated in initramfs and not configured in kickstart)
url @KSTEST_URL@
install

bootloader --timeout=1
zerombr
clearpart --all
autopart

keyboard us
lang en
timezone America/New_York
rootpw qweqwe
shutdown

%packages
%end

%post --nochroot

@KSINCLUDE@ post-nochroot-lib-network.sh

check_gui_configurations enp0s3 enp0s4

%end

%post

@KSINCLUDE@ post-lib-network.sh

check_device_ifcfg_value enp0s3 DEVICE enp0s3
check_device_ifcfg_value enp0s3 ONBOOT yes
check_ifcfg_key_exists enp0s3 HWADDR no
check_device_connected enp0s3 yes

# enp0s4 is configured neigher via boot options nor via kickstart so anaconda
# creates default ifcfg file (rhel) or dumps it from default connection created
# by NM on Fedora
check_device_ifcfg_value enp0s4 DEVICE enp0s4
check_ifcfg_key_exists enp0s4 HWADDR no
if [[ "@KSTEST_OS_NAME@" == "rhel" ]]; then
    check_device_ifcfg_value enp0s4 ONBOOT no
    check_device_connected enp0s4 no
else
    check_device_ifcfg_value enp0s4 ONBOOT yes
    check_device_connected enp0s4 yes
fi

# No error was written to /root/RESULT file, everything is OK
if [[ ! -e /root/RESULT ]]; then
   echo SUCCESS > /root/RESULT
fi
%end
