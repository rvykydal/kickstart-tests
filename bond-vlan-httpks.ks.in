#test name: bond-vlan
url @KSTEST_URL@
install

network --device bond0 --bootproto static --ip @KSTEST_STATIC_IP@ --netmask @KSTEST_STATIC_NETMASK@ --gateway @KSTEST_STATIC_GATEWAY@ --bondslaves=enp0s4,enp0s5 --bondopts=mode=active-backup,miimon-100,primary=enp0s4 --activate --vlanid=222 --activate --onboot=no

bootloader --timeout=1
zerombr
clearpart --all
autopart

keyboard us
lang en
timezone America/New_York
rootpw qweqwe
shutdown

%packages
%end

%post --nochroot

@KSINCLUDE@ post-nochroot-lib-network.sh

check_gui_configurations enp0s3 enp0s4 enp0s5 bond0 bond0.222

%end

%post

@KSINCLUDE@ post-lib-network.sh

check_device_ifcfg_value bond0.222 ONBOOT no
check_device_ifcfg_value bond0 ONBOOT no
check_device_ifcfg_value bond0_slave_1 ONBOOT no
check_device_ifcfg_value bond0_slave_2 ONBOOT no
check_device_connected bond0 yes
check_device_connected bond0.222 yes
check_bond_has_slave bond0 enp0s4 yes
check_bond_has_slave bond0 enp0s5 yes
check_bond_has_slave bond0 enp0s3 no
check_device_ipv4_address bond0.222 @KSTEST_STATIC_IP@
check_device_has_ipv4_address bond0 no

# No error was written to /root/RESULT file, everything is OK
if [[ ! -e /root/RESULT ]]; then
   echo SUCCESS > /root/RESULT
fi
%end
